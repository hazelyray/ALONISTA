<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.enrollment.system.controller.TeacherDashboardController"
            style="-fx-background-color: #ecf0f1;">
    
    <!-- Top Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" 
              style="-fx-background-color: #2c3e50; -fx-padding: 15 30;">
            <!-- Title on Left -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="ðŸ“Š" style="-fx-font-size: 24px;"/>
                <Label text="Teacher's Dashboard" 
                       style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            </HBox>
            
            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- Date/Time and User Info on Right -->
            <HBox spacing="20" alignment="CENTER_RIGHT">
                <!-- Date/Time -->
                <Label fx:id="dateTimeLabel" text="Dec 7, 2025, 6:30 PM" 
                       style="-fx-text-fill: #bdc3c7; -fx-font-size: 14px;"/>
                
                <!-- User Info with Profile Picture -->
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <!-- Circular Profile Picture -->
                    <StackPane fx:id="profilePictureContainer" 
                               style="-fx-background-color: #3498db; -fx-background-radius: 20; -fx-pref-width: 40; -fx-pref-height: 40;">
                        <ImageView fx:id="profileImageView" 
                                   fitWidth="40" fitHeight="40" 
                                   preserveRatio="true" 
                                   style="-fx-background-radius: 20;"/>
                        <Label fx:id="profileInitialsLabel" 
                               text="U" 
                               style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                    </StackPane>
                    
                    <!-- Name and Role -->
                    <VBox spacing="2" alignment="CENTER_LEFT">
                        <Label fx:id="userNameLabel" text="User Name" 
                               style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                        <Label fx:id="userRoleLabel" text="Role" 
                               style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;"/>
                    </VBox>
                </HBox>
            </HBox>
        </HBox>
    </top>
    
    <!-- Left Sidebar -->
    <left>
        <VBox spacing="8" style="-fx-background-color: #2c3e50; -fx-padding: 0;" prefWidth="280">
            <!-- Logo/Header Section -->
            <VBox alignment="CENTER" spacing="5" style="-fx-padding: 25 15 30 15; -fx-background-color: #1a252f;">
                <Label text="ðŸ“š" style="-fx-font-size: 36px;"/>
                <Label text="Seguinon SASHS" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Enrollment System" style="-fx-text-fill: #95a5a6; -fx-font-size: 12px;"/>
            </VBox>
            
            <!-- Menu Section -->
            <VBox spacing="3" style="-fx-padding: 0 15;">
                <Label text="MAIN MENU" style="-fx-text-fill: #7f8c8d; -fx-font-size: 11px; -fx-font-weight: bold; -fx-padding: 15 15 10 15;"/>
                
                <Button fx:id="btnDashboard" text="  ðŸ“Š Dashboard" onAction="#showDashboard"
                        style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 14 20; -fx-alignment: center-left; -fx-background-radius: 8; -fx-cursor: hand; -fx-pref-width: 250; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 2, 2);"/>
                
                <Button fx:id="btnMySubjects" text="  ðŸ“š Subjects" onAction="#showMySubjects"
                        style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 14 20; -fx-alignment: center-left; -fx-background-radius: 8; -fx-cursor: hand; -fx-pref-width: 250; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 2, 2);"/>
                
                <Button fx:id="btnMyStudents" text="  ðŸ‘¥ Sections and Students" onAction="#showMyStudents"
                        style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 14 20; -fx-alignment: center-left; -fx-background-radius: 8; -fx-cursor: hand; -fx-pref-width: 250; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 2, 2);"/>
                
                <Button fx:id="btnAccountSettings" text="  âš™ï¸ Account Settings" onAction="#showAccountSettings"
                        style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 14 20; -fx-alignment: center-left; -fx-background-radius: 8; -fx-cursor: hand; -fx-pref-width: 250; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 2, 2);"/>
            </VBox>
            
            <!-- Spacer -->
            <Region VBox.vgrow="ALWAYS"/>
            
            <!-- Logout Button -->
            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20 15;">
                <Button fx:id="logoutButton" text="ðŸšª Logout" onAction="#handleLogout"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 30; -fx-cursor: hand; -fx-pref-width: 250; -fx-effect: dropshadow(gaussian, rgba(231,76,60,0.3), 8, 0, 0, 2);"/>
            </VBox>
            
            <!-- Footer -->
            <VBox alignment="CENTER" spacing="5" style="-fx-padding: 20 15; -fx-background-color: #1a252f;">
                <Label text="Version 1.0" style="-fx-text-fill: #7f8c8d; -fx-font-size: 10px;"/>
            </VBox>
        </VBox>
    </left>
    
    <!-- Center Content -->
    <center>
        <VBox fx:id="dashboardContent" spacing="20" style="-fx-padding: 30;">
            <!-- Empty content area - will be populated by page methods -->
        </VBox>
    </center>
    
</BorderPane>

