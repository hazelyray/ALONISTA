<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.enrollment.system.controller.AddEditTeacherController"
      spacing="15" style="-fx-background-color: #ecf0f1; -fx-padding: 25;">
    
    <!-- Title -->
    <Label fx:id="titleLabel" text="Add New Teacher Account" 
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    
    <!-- Scrollable Form Container -->
    <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;" VBox.vgrow="ALWAYS">
        <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        
        <!-- Username -->
        <VBox spacing="5">
            <Label text="Username *" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <TextField fx:id="usernameField" promptText="Enter username" 
                       style="-fx-pref-height: 35; -fx-font-size: 14px;"/>
        </VBox>
        
        <!-- Password -->
        <VBox spacing="5">
            <Label text="Password *" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <PasswordField fx:id="passwordField" promptText="Enter password" 
                           style="-fx-pref-height: 35; -fx-font-size: 14px;"/>
        </VBox>
        
        <!-- Full Name -->
        <VBox spacing="5">
            <Label text="Full Name *" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <TextField fx:id="fullNameField" promptText="Enter full name" 
                       style="-fx-pref-height: 35; -fx-font-size: 14px;"/>
        </VBox>
        
        <!-- Active Status -->
        <VBox spacing="5">
            <CheckBox fx:id="isActiveCheckBox" text="Account is active" 
                      style="-fx-font-size: 14px;"/>
        </VBox>
        
        </VBox>
    </ScrollPane>
    
    <!-- Buttons - Always visible at bottom -->
    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 15 0 0 0; -fx-background-color: #ecf0f1;">
        <Button fx:id="cancelButton" text="Cancel" 
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 12 30; -fx-cursor: hand; -fx-min-width: 120; -fx-min-height: 40;"/>
        <Button fx:id="saveButton" text="Create" 
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 12 30; -fx-cursor: hand; -fx-min-width: 120; -fx-min-height: 40;"/>
    </HBox>
    
</VBox>

