<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.enrollment.system.controller.DashboardController"
            style="-fx-background-color: #ecf0f1;">
    
    <!-- Top Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" 
              style="-fx-background-color: #2c3e50; -fx-padding: 15 30;">
            <HBox spacing="10" HBox.hgrow="ALWAYS">
                <Label fx:id="userNameLabel" text="Welcome, User" 
                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label fx:id="userRoleLabel" text="(Role)" 
                       style="-fx-text-fill: #bdc3c7; -fx-font-size: 14px;"/>
            </HBox>
            <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5; -fx-padding: 8 20; -fx-cursor: hand;"/>
        </HBox>
    </top>
    
    <!-- Left Sidebar -->
    <left>
        <VBox spacing="5" style="-fx-background-color: #34495e; -fx-padding: 20 0;" prefWidth="250">
            <Label text="MENU" style="-fx-text-fill: #95a5a6; -fx-font-size: 12px; -fx-font-weight: bold; -fx-padding: 10 20 5 20;"/>
            
            <Button fx:id="btnDashboard" text="Dashboard" onAction="#showDashboard"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 20; -fx-alignment: center-left; -fx-background-radius: 5; -fx-cursor: hand; -fx-pref-width: 230;"/>
            
            <!-- Student Management - Expandable Menu -->
            <VBox spacing="0">
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Button fx:id="btnStudentManagement" text="Student Management ▼" 
                            onAction="#toggleStudentManagement"
                            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 20; -fx-alignment: center-left; -fx-background-radius: 5; -fx-cursor: hand; -fx-pref-width: 230; -fx-content-display: left;"/>
                </HBox>
                
                <!-- Submenu Items -->
                <VBox fx:id="studentManagementSubmenu" spacing="0" style="-fx-padding: 0 0 0 20;" visible="false" managed="false">
                    <Button fx:id="btnAddStudent" text="Add Student" onAction="#showAddStudent"
                            style="-fx-background-color: transparent; -fx-text-fill: #bdc3c7; -fx-font-size: 13px; -fx-padding: 10 20; -fx-alignment: center-left; -fx-background-radius: 5; -fx-cursor: hand; -fx-pref-width: 210;"/>
                    <Button fx:id="btnViewStudents" text="View Students" onAction="#showViewStudents"
                            style="-fx-background-color: transparent; -fx-text-fill: #bdc3c7; -fx-font-size: 13px; -fx-padding: 10 20; -fx-alignment: center-left; -fx-background-radius: 5; -fx-cursor: hand; -fx-pref-width: 210;"/>
                </VBox>
            </VBox>
            
            <Button fx:id="btnStrandAndSection" text="Strand and Section" onAction="#showStrandAndSection"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 20; -fx-alignment: center-left; -fx-background-radius: 5; -fx-cursor: hand; -fx-pref-width: 230;"/>
            
            <!-- Reports - Expandable Menu -->
            <VBox spacing="0">
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Button fx:id="btnReports" text="Reports ▼" 
                            onAction="#toggleReports"
                            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 20; -fx-alignment: center-left; -fx-background-radius: 5; -fx-cursor: hand; -fx-pref-width: 230; -fx-content-display: left;"/>
                </HBox>
                
                <!-- Submenu Items -->
                <VBox fx:id="reportsSubmenu" spacing="0" style="-fx-padding: 0 0 0 20;" visible="false" managed="false">
                    <Button fx:id="btnByGradeLevel" text="By Grade Level" onAction="#showByGradeLevel"
                            style="-fx-background-color: transparent; -fx-text-fill: #bdc3c7; -fx-font-size: 13px; -fx-padding: 10 20; -fx-alignment: center-left; -fx-background-radius: 5; -fx-cursor: hand; -fx-pref-width: 210;"/>
                    <Button fx:id="btnByStrand" text="By Strand" onAction="#showByStrand"
                            style="-fx-background-color: transparent; -fx-text-fill: #bdc3c7; -fx-font-size: 13px; -fx-padding: 10 20; -fx-alignment: center-left; -fx-background-radius: 5; -fx-cursor: hand; -fx-pref-width: 210;"/>
                    <Button fx:id="btnEnrollmentSummary" text="Enrollment Summary" onAction="#showEnrollmentSummary"
                            style="-fx-background-color: transparent; -fx-text-fill: #bdc3c7; -fx-font-size: 13px; -fx-padding: 10 20; -fx-alignment: center-left; -fx-background-radius: 5; -fx-cursor: hand; -fx-pref-width: 210;"/>
                    <Button fx:id="btnArchiveStudents" text="Archive Students" onAction="#showArchiveStudents"
                            style="-fx-background-color: transparent; -fx-text-fill: #bdc3c7; -fx-font-size: 13px; -fx-padding: 10 20; -fx-alignment: center-left; -fx-background-radius: 5; -fx-cursor: hand; -fx-pref-width: 210;"/>
                </VBox>
            </VBox>
            
            <!-- Admin Settings - Expandable Menu -->
            <VBox fx:id="adminSection" spacing="0">
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Button fx:id="btnAdminSettings" text="Admin Settings ▼" 
                            onAction="#toggleAdminSettings"
                            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 20; -fx-alignment: center-left; -fx-background-radius: 5; -fx-cursor: hand; -fx-pref-width: 230; -fx-content-display: left;"/>
                </HBox>
                
                <!-- Submenu Items -->
                <VBox fx:id="adminSettingsSubmenu" spacing="0" style="-fx-padding: 0 0 0 20;" visible="false" managed="false">
                    <Button fx:id="btnProfile" text="Profile" onAction="#showProfile"
                            style="-fx-background-color: transparent; -fx-text-fill: #bdc3c7; -fx-font-size: 13px; -fx-padding: 10 20; -fx-alignment: center-left; -fx-background-radius: 5; -fx-cursor: hand; -fx-pref-width: 210;"/>
                    <Button fx:id="btnChangePassword" text="Change Password" onAction="#showChangePassword"
                            style="-fx-background-color: transparent; -fx-text-fill: #bdc3c7; -fx-font-size: 13px; -fx-padding: 10 20; -fx-alignment: center-left; -fx-background-radius: 5; -fx-cursor: hand; -fx-pref-width: 210;"/>
                    <Button fx:id="btnSystemSettings" text="System Settings" onAction="#showSystemSettings"
                            style="-fx-background-color: transparent; -fx-text-fill: #bdc3c7; -fx-font-size: 13px; -fx-padding: 10 20; -fx-alignment: center-left; -fx-background-radius: 5; -fx-cursor: hand; -fx-pref-width: 210;"/>
                </VBox>
            </VBox>
        </VBox>
    </left>
    
    <!-- Center Content -->
    <center>
        <VBox fx:id="dashboardContent" spacing="20" style="-fx-padding: 30;">
            <!-- Empty content area - will be populated by page methods -->
        </VBox>
    </center>
    
</BorderPane>
